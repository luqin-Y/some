.title{
    color: #ccc;
    font-size: 1.3rem;
    text-align: center;
    margin-top: 8px;
}

.list{
    display: block;
}

.list-con{
    border-top: 1px solid #eee;
    padding: 10px;
    display: flex;
}

.cover{
    justify-content: flex-center;
    width:60px;
    height: 60px;
}
.move-name{
    font-size: 0.9rem;
    color: #000;
    font-weight: 600;
}
.move-year{
    font-size:0.6rem;
    color: #bbb;
}
.move-action{
    font-size: 0.7rem;
    color: #000;
}
.movemove-name, .move-year, .move-action{
    display: block;
    margin-bottom: 5px;
}

.move-stars{
    color: #f40;
    font-size: 0.7rem;
    font-weight: 600;
    position: absolute;
    right: 2rem;
}